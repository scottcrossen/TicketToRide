<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cards:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:columnCount="3"
        android:rowCount="2">

        <RelativeLayout>
            <ImageView
                android:id="@+id/cardBack"
                android:rotation="90"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/card_back" />
            <TextView
                android:id="@+id/cardsInDeck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/cardBack"
                android:layout_alignTop="@id/cardBack"
                android:layout_alignRight="@id/cardBack"
                android:layout_alignBottom="@id/cardBack"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="12"
                android:textColor="#FFFFFF"
                android:textSize="40dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/card1"
            android:rotation="90"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/card_back" />

        <ImageView
            android:id="@+id/card2"
            android:rotation="90"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/card_back" />

        <ImageView
            android:id="@+id/card3"
            android:rotation="90"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/card_back" />

        <ImageView
            android:id="@+id/card4"
            android:rotation="90"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/card_back" />

        <ImageView
            android:id="@+id/card5"
            android:rotation="90"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/card_back" />

    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Destination Cards:"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/destination_card_back"
            android:rotation="90"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/dest_card_back" />
        <TextView
            android:id="@+id/destinationCardsInDeck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/destination_card_back"
            android:layout_alignTop="@id/destination_card_back"
            android:layout_alignRight="@id/destination_card_back"
            android:layout_alignBottom="@id/destination_card_back"
            android:layout_margin="1dp"
            android:gravity="center"
            android:text="12"
            android:textColor="#FFFFFF"
            android:textSize="40dp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>