<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="smarthawkdesigns.familymapclient.Fragments.LoginFragment"
    android:orientation="vertical"
    android:id="@+id/loginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="Server Host:"
            android:id="@+id/hostTextView"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hostEditText"
            android:inputType="textAutoComplete"
            android:layout_toRightOf="@id/hostTextView"
            android:layout_alignParentEnd="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="Server Port:"
            android:id="@+id/portTextView"
            android:layout_below="@id/hostTextView"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/portEditText"
            android:inputType="number"
            android:layout_alignParentRight="true"
            android:layout_below="@id/hostTextView"
            android:layout_toRightOf="@id/portTextView"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="User Name:"
            android:id="@+id/userNameTextView"
            android:layout_below="@id/portTextView"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userNameEditText"
            android:layout_alignParentRight="true"
            android:layout_below="@id/hostTextView"
            android:layout_toRightOf="@id/portEditText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="Password:"
            android:id="@+id/passwordTextView"
            android:layout_below="@id/userNameTextView"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordEditText"
            android:inputType="textPassword"
            android:layout_toRightOf="@id/passwordTextView"
            android:layout_alignParentRight="true"
            android:layout_below="@id/userNameEditText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="First Name:"
            android:id="@+id/firstNameTextView"
            android:layout_below="@id/passwordTextView"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/firstNameEditText"
            android:inputType="textAutoComplete"
            android:layout_toRightOf="@id/firstNameTextView"
            android:layout_alignParentRight="true"
            android:layout_below="@id/passwordEditText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="Last Name:"
            android:id="@+id/lastNameTextView"
            android:layout_below="@id/firstNameTextView"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lastNameEditText"
            android:layout_alignParentRight="true"
            android:layout_below="@id/firstNameEditText"
            android:layout_toRightOf="@id/lastNameTextView"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="Email:"
            android:id="@+id/emailTextView"
            android:layout_below="@id/lastNameTextView"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/emailEditText"
            android:inputType="textEmailAddress"
            android:layout_alignParentRight="true"
            android:layout_below="@id/lastNameEditText"
            android:layout_toRightOf="@id/emailTextView"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:text="Gender:"
            android:id="@+id/gender"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_gravity="center"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailEditText"
            android:layout_toRightOf="@id/gender"
            android:id="@+id/genderRadio"
            android:orientation="horizontal"
            android:checkedButton="@+id/maleRadio"
        >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:id="@+id/maleRadio" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:id="@+id/femaleRadio"
                android:layout_toRightOf="@id/maleRadio" />
        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="@dimen/activity_vertical_margin">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:id="@+id/signInButton"
            android:layout_below="@id/radio"
            android:onClick="LoginFragment.onSignInPressed"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:id="@+id/registerButton"
            android:layout_below="@id/radio"
            android:layout_toRightOf="@id/signInButton"
            android:onClick="onRegisterPressed"/>


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50000dp"/>
</LinearLayout>